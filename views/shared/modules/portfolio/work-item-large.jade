include ../../../../views/shared/global/jade-helpers.jade
-work = data || []
-caseStudyText= "More Information"

.twelve.columns.work-tout-wrap
  .tout-anchor.aspect-30x11
    .aspect-inner
      a.aspect-inner.bw-tout(href=work.slug.relative)
        .tout-inner-wrap
          .img-wrap.media-element
            +responsiveImg(work.home_content.media.image.large, 'grayscale')
          .video-wrap.media-element
            +responsiveImg(work.home_content.media.image.large, 'grayscale')
            .video-background
            .button-tout-wrap.text-center.aspect-inner
              .table-center-wrap.full
                .table-center
                  h1.t2.t2-light=work.client
                  span.btn.btn-stroke.btn-icon= caseStudyText
                    span.icon-wrap
                      +svgIcon('arrow-right', 'white size-16')
